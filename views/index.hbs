<!-- index.hbs -->
<h1>🍹 Berlin Bar Fantasia 🍹</h1>

{{#if currentUser}}
  <!-- Elements for logged-in users -->
  <nav>
    <ul>
      <li><a href="/">Index</a></li>
      <li><a href="/random">Random Bar</a></li>
      <li><a href="/search">Search by location</a></li>
      <li><a href="/create-bar">Create bar</a></li>
      <li><a href="/auth/logout">Logout</a></li>
    </ul>
  </nav>
{{else}}
  <!-- Elements for users who are not logged in -->
  <p>Welcome to the site! Ready to access a world of wonder? </p>
  <nav>
    <ul>
      <li><a href="/auth/login">Login</a></li>
      <li><a href="/auth/signup">Signup</a></li>
    </ul>
  </nav>
{{/if}}

{{#if currentUser}}
  <p>Welcome, {{currentUser.username}}!</p>
  <p>Email: {{currentUser.email}}</p>
{{else}}
  <p>
    😥 We would have logged you in, but no user information is available. Sign
    up or log in, bidde bidde. 😥</p>
{{/if}}